<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_wojia_setting_tongyong_savebudget"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:text="@string/wojia_setting_tongyong_savabudget"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wojia_setting_tongyong_savebudget"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="31dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/wojia_setting_tongyong_savabudget_explain"
            android:textColor="@color/bg_Gray_dark"
            android:textSize="12sp" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_wojia_setting_universe_savabudget"
            style="@style/SwitchButtonStyle"
            android:layout_above="@+id/textView1"
            android:layout_alignRight="@+id/textView1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="2dp"
        android:background="#dadada" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:text="@string/wojia_setting_anquan_closegesturelock"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_wojia_setting_anquan"
            style="@style/SwitchButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="31dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="2dp"
        android:background="#dadada" />

</LinearLayout>