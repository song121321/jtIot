<song.jtslkj.ui.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_baijia_consume"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/left_baijia"
    android:orientation="vertical" >

    <!-- 左侧菜单页面 -->

    <include layout="@layout/activity_leftmenu" />

    <song.jtslkj.ui.MyRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/appbg"
        android:orientation="vertical" >

        <include layout="@layout/actionbar_main" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" >

            <!-- 子菜单选项 -->

            <LinearLayout
                android:id="@+id/layout_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent" >

                    <TextView
                        android:id="@+id/tv_baijia_section_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/text_white"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/baijia_daohang_yuefen"
                        android:textColor="@color/main_textcolor_normal"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_baijia_mark_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_baijia_section_month"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/baijia_section_bg_normal" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#dddddd" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_baijia_section_leixing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/text_white"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/baijia_daohang_leixing"
                        android:textColor="@color/main_textcolor_normal"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_baijia_mark_leixing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_baijia_section_leixing"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/baijia_section_bg_normal" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#dddddd" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_baijia_section_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/text_white"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/baijia_daohang_xiaofeizhe"
                        android:textColor="@color/main_textcolor_normal"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_baijia_mark_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_baijia_section_person"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/baijia_section_bg_normal" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#dddddd" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_white"
            android:gravity="center_vertical" >

            <song.jtslkj.xlistview.XListView
                android:id="@+id/consumelist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/text_white"   >
            </song.jtslkj.xlistview.XListView>
        </RelativeLayout>
    </song.jtslkj.ui.MyRelativeLayout>

</song.jtslkj.ui.DragLayout>