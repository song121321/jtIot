<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_usual" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_Gray_light" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50dp"
             >

            <song.honey.ui.MyListView
                android:id="@+id/listView_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_White"
                android:cacheColorHint="#00000000" >
            </song.honey.ui.MyListView>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_White"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_budget_addbatch_choseall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/baijia_budget_allchose"
                android:textColor="@color/tv_Black" />

            <TextView
                android:id="@+id/tv_budget_addbatch_totalmoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/baijia_budget_total"
                android:textColor="@color/tv_Red" />

            <TextView
                android:id="@+id/tv_budget_addbatch_totalnumber"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/tv_Red"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/baijia_budget_addbatch"
                android:textColor="@color/tv_White" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>